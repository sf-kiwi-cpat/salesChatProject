            <property name="imgHeight" type="String" default="50px" label="Enter Image Height"/>
            <property name="borderColor" label="Top Border Color" type="Color" default="#35a756"/>
            <property name="backgroundColor" label="Background Color" type="Color" default="#000000"/>
            <property name="textColor" label="Text Color" type="Color" default="#c3c3c3"/>
            <property name="socialFacebook" type="Boolean" default="true" label="Facebook"/>
            <property name="socialTwitter" type="Boolean" default="true" label="Twitter"/>
            <property name="socialLinkedin" type="Boolean" default="true" label="Linkedin"/>
